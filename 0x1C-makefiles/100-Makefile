CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS := -Wall -Werror -Wextra -pedantic
RM = rm -f

all:
ifeq ($(wildcard m.h),)
    $(error "Header file m.h is missing")
else
    $(MAKE) $(NAME)
endif

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
